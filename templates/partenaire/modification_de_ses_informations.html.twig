{% extends 'default/accueil.html.twig' %}
{% block title %}{{ parent() }}{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}
	<div class="container">
        <div class="header clearfix">
            <h1 class="text-muted">Lycée du Parc de Vilegénis</h1>
        </div>
    
        <div class="jumbotron">
            <div class="header clearfix">
                <h1 class="text-muted">Modifiez vos informations</h1>
            </div>
			{{ form_start(form) }}
				<div class="form-group">
		        	<label>SIRET</label>
					{{ form_widget(form.siret, {'attr' : {'class' : 'form-control', 'placeholder': 'SIRET'}}) }}
				</div>

				<div class="form-group">
		            <label>Nom</label>
					{{ form_widget(form.nom, {'attr': {'class' : 'form-control', 'placeholder': 'Nom'}}) }}
				</div>

				<div class="form-group">
		            <label>Mot de passe</label>
					{{ form_widget(form.motdepasse, {'attr': {'class' : 'form-control', 'placeholder': 'Mot de passe'}} ) }}
				</div>
				
				<div class="form-group">
		            <label>Téléphone</label>
					{{ form_widget(form.telephone, {'attr': {'class' : 'form-control', 'placeholder': 'Téléphone'}}) }}
				</div>

				<div class="form-group">
		            <label>Email</label>
					{{ form_widget(form.email, {'attr': {'class' : 'form-control', 'placeholder': 'Email'}}) }}
				</div>

				<div class="form-group">
		            <label>Adresse</label>
					{{ form_widget(form.adresse, {'attr': {'class' : 'form-control', 'placeholder': 'Adresse'}}) }}
				</div>

				<div class="form-group">
		            <label>Ville</label>
					{{ form_widget(form.ville, {'attr': {'class' : 'form-control', 'placeholder': 'Ville'}}) }}
				</div>

				<div class="form-group">
		            <label>Code postal</label>
					{{ form_widget(form.codepostal, {'attr': {'class' : 'form-control', 'placeholder': 'Code postal'}}) }}
				</div>

				{{ form_widget(form.inscription, {'attr': {'label': 'Modifier', 'class': 'btn btn-primary btn-lg btn-block'}}) }}<br>
			{{ form_end(form) }}
			<a href="{{ path('accueil') }}" class="btn btn-warning btn-lg btn-block">Retour</a>
		</div>

		<footer>
            <p>Copyright &copy; Cheik-Siramakan Keita 2018-{{ "now"|date('Y') }}</p>
        </footer>
	</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
{% endblock %}