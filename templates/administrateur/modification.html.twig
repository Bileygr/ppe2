<!DOCTYPE html>
<html lang="fr">
	<head>
    	<meta charset="utf-8">
    	<title>{% block title %}Modifier vos informations{% endblock %}</title>

    	<!-- CSS -->
    	<style type="text/css">
    		input { 
    			text-align: center; 
			}
    	</style>
  	</head>

  	<body>
        <h1>{% block titre %}Vos informations{% endblock %}</h1>
        {% block body %}
          {{ form_start(registrationForm) }}
    		  	{{ form_widget(registrationForm.nom, {'attr': {'placeholder': administrateur.nom }}) }}
    		    {{ form_widget(registrationForm.prenom, {'attr': {'placeholder': administrateur.prenom }}) }}
            {{ form_widget(registrationForm.motdepasse) }}
    		    {{ form_widget(registrationForm.telephone, {'attr': {'placeholder': administrateur.telephone }}) }}
    			  {{ form_widget(registrationForm.email, {'attr': {'placeholder': administrateur.email }}) }}
    			  {{ form_widget(registrationForm.adresse, {'attr': {'placeholder': administrateur.adresse }}) }}
    			  {{ form_widget(registrationForm.ville, {'attr': {'placeholder': administrateur.ville }}) }}
    			  {{ form_widget(registrationForm.codepostal, {'attr': {'placeholder': administrateur.codepostal }}) }}
    			  {{ form_widget(registrationForm.inscription, {'attr': {'label': 'Modifier' }}) }}
    			  <a href="{{ path('accueil') }}">Retour</a>
  		    {{ form_end(registrationForm) }}
        {% endblock %}

      	<footer>
        	<p>&copy; Cheik-Siramakan Keita 2018-{{ "now"|date('Y') }}</p>
      	</footer>

    	<!-- Scripts -->
  	</body>
</html>