		<table id="example" class="table table-striped table-bordered" style="width:100%">
        	<thead>
            	<tr>
                	<th scope="col">ID</th>
					<th scope="col">Entreprise</th>
					<th scope="col">Formation</th>
					<th scope="col">Nom</th>
					<th scope="col">Debut</th>
					<th scope="col">Fin</th>
					<th scope="col">Date d'ajout</th>
