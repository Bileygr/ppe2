				      			<td>{{ offre.nompartenaire }}</td>
				      			<td>{{ offre.nomformation }}</td>
				      			<td>{{ offre.libelle }}</td>
				      			<td>{{ offre.debut|date('d-m-Y') }}</td>
				      			<td>{{ offre.fin|date('d-m-Y') }}</td>
				      			<td>{{ offre.dateajout|date('d-m-Y') }}</td>
